{
    "name": "remind/matomo-link-handler",
    "type": "typo3-cms-extension",
    "description": "REMIND - Matomo Link Handler",
    "license": [ "GPL-3.0-or-later" ],
    "authors": [
        {
            "name": "REMIND GmbH",
            "email": "technik@remind.de"
        },
        {
            "name": "David Mellen",
            "email": "d.mellen@remind.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Remind\\MatomoLinkHandler\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Remind\\MatomoLinkHandler\\Tests\\": "Tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "apcu-autoloader": true,
        "vendor-dir": ".build/vendor",
        "bin-dir": ".build/bin",
        "sort-packages": true,
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^12.4"
    },
    "require-dev": {
        "slevomat/coding-standard": "^8.14",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".build/web",
            "extension-key": "rmnd_matomo_link_handler"
        }
    },
    "scripts": {
        "phpcs": "@php ./.build/bin/phpcs --standard=.build/phpcs.xml --extensions=php --ignore=.build --report=full -n .",
        "phpcbf": "@php ./.build/bin/phpcbf --standard=.build/phpcs.xml --extensions=php --ignore=.build ."
    }
}
